    ["Graipuss Medussi"] = "1M/250M",
    ["La Grande Combinasion"] = "10M/1B",
    ["Nuclearo Dinossauro"] = "15M/2.5B",
    ["Garama and Madundung"] = "50M/10B",
    ["Torrtuginni Dragonfrutini"] = "350K/500M"
}
ESPTab:CreateToggle({
    Name = "🧠 Brainrot ESP",
    CurrentValue = false,
    Flag = "BrainrotESP",
    Callback = function(Value)
        brainrotESPEnabled = Value
        for _,billboard in pairs(brainrotESPObjects) do billboard:Destroy() end
        brainrotESPObjects = {}
        if Value then
            for name,price in pairs(BrainrotsList) do
                for _,obj in pairs(workspace:GetDescendants()) do
                    if obj.Name == name and obj:FindFirstChild("HumanoidRootPart") then
                        local bb = makeBillboard(obj.HumanoidRootPart, "🧠 "..name.." - "..price, Color3.fromRGB(0,255,0))
                        bb.Parent = obj.HumanoidRootPart
                        brainrotESPObjects[obj] = bb
                    end
                end
            end
        end
    end
})

-- Base Timer ESP Toggle
ESPTab:CreateToggle({
    Name = "🏠 Base Timer ESP",
    CurrentValue = false,
    Flag = "BaseTimerESP",
    Callback = function(Value)
        baseESPEnabled = Value
        for _,data in pairs(baseESPObjects) do data.Billboard:Destroy() end
        baseESPObjects = {}
        if Value then
            for _,plot in pairs(workspace.Plots:GetChildren()) do
                local purchases = plot:FindFirstChild("Purchases")
                if purchases and purchases:FindFirstChild("PlotBlock") and purchases.PlotBlock:FindFirstChild("Main") then
                    local gui = purchases.PlotBlock.Main:FindFirstChild("BillboardGui")
                    if gui and gui:FindFirstChild("RemainingTime") then
                        local bb = makeBillboard(purchases.PlotBlock.Main, gui.RemainingTime.Text, Color3.fromRGB(0,255,255))
                        bb.Parent = purchases.PlotBlock.Main
                        baseESPObjects[plot] = {Billboard = bb, Timer = gui.RemainingTime}
                    end
                end
            end
        end
    end
})
RunService.Heartbeat:Connect(function()
    if baseESPEnabled then
        for plot,data in pairs(baseESPObjects) do
            if data.Timer and data.Billboard:FindFirstChild("TextLabel") then
                local text = data.Timer.Text
                local num = tonumber(text)
                if (text == "Unlocked") or (num and num <= 0) then
                    data.Billboard.TextLabel.Text = "Unlocked"
                    data.Billboard.TextLabel.TextColor3 = Color3.fromRGB(0,255,0)
                else
                    data.Billboard.TextLabel.Text = text
                    data.Billboard.TextLabel.TextColor3 = Color3.fromRGB(0,255,255)
                end
            end
        end
    end
end)
